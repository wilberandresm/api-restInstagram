<%- layout('layouts/main') %>

<div class="row">
    <div class="col-md-3">
        <div class="card ">
            <img src="<%= user.profile_picture %>" class="card-img-top">
            <div class="card-body text-center">
                    <h5 class="card-title"><%= user.full_name %></h5>
                    <%= user.username %>
                    <%= user.bio %>
                    <hr>
                    Promedio de likes por publicación(basado en los 20 post más recientes): <%= estadisticas.promlikes %> likes
                    <hr>
                    Eficiencia del perfil: <%= estadisticas.efic %> %
                    <hr>
                    <%= user.counts.media %> <i class="fa fa-camera"></i>
                    <%= user.counts.follows %> <i class="fa fa-heart"></i>
                    <%= user.counts.followed_by %> <i class="fa fa-users"></i>
            </div>
            <div class="card-footer">
                <a href="<%= user.website %>" class="btn btn-success btn-block" target="_blank" >Website</a>
            </div>

        </div>
    </div>
    <div class="col-md-9">
        <div class="row">
            <% posts.forEach(function(post){ %>
                <div class="col-md-4">
                    <div class="card mb-2">
                        <img src="<%= post.images.standard_resolution.url %>" class="card-img-top">
                        <div class="card-body">
                            <p>Posted by <%= post.user.full_name %></p>
                            <p>Likes: <%= post.likes.count %></p>
                            <p> <%= formatDate(post.created_time) %> </p>

                        </div>

                    </div>

                </div>
            <% })%>


        </div>


    </div>
</div>
